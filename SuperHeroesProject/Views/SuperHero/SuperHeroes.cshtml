@model IEnumerable<SuperHeroesProject.Models.SuperHero>

@{
    ViewBag.Title = "SuperHeroes";
}

<h2>SuperHeroes</h2>

<p>
    @Html.ActionLink("Create New", "CreateHero")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditHero", new { id=item.HeroId }) |
            @Html.ActionLink("Details", "HeroDetails", new { id=item.HeroId }) |
            @Html.ActionLink("Delete", "DeleteHero", new { id=item.HeroId })
        </td>
    </tr>
}

</table>
